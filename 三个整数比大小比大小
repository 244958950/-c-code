#include<stdio.h>
//创建并定义函数MAX
int MAX(int a, int b, int c)
{
    if (a>b && a>c)
    return a;
    else if (c>a && c>b)
    return c;
    else if (b>a && b>c)
    return b;
}
int main()
{
    int x,y,z;
    //输入需要比较的三个数字
    printf("请输入三个数字:");
    scanf("%d%d%d",&x,&y,&z);
    //代入创建好的MAX函数中
    int max= MAX(x,y,z);
    printf("max = %d\n", max);
    return 0;
}
